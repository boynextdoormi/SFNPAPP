<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="pref_text">
        <item name="android:textSize">32px</item>
        <item name="android:textColor">#60d0f0</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="pref_hint">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">#202040</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:textSize">24px</item>
     </style>
    
    <style name="style_menuitem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64px</item>
        <item name="android:textSize">32px</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_margin">12dip</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:background">@drawable/btn_2</item>
        <item name="android:button">@drawable/btn_3</item>
        <item name="android:paddingLeft">8dp</item>
	</style>

    <style name="pref_menu">
        <item name="android:layout_height">80px</item>
        <item name="android:layout_width">200px</item>
        <item name="android:textSize">16px</item>
        <item name="android:singleLine">true</item>
        <item name="android:fadingEdge">horizontal</item>
     </style>
    	
    <style name="pad_menu">
        <item name="android:layout_height">80px</item>
        <item name="android:layout_width">80px</item>
     </style>

</resources>