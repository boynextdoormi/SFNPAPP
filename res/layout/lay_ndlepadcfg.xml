<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/msub_machine"
    android:layout_width="240dp"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:gravity="center"
    >
  <LinearLayout
    	android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center" >
        <ImageView
        	android:layout_width="32dp"
            android:layout_height="32dp"
            android:focusable="false"
            android:src="@drawable/icon_branch" 
	        android:contentDescription="@string/dummystr"
            />
		<TextView
        	style="@style/pref_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/npcfg_title" 
            />
	</LinearLayout>
       

    <LinearLayout
    	android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center" >

        <TextView
            style="@style/pref_conf"
			android:gravity="end"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/npcfg_padwidth" />

        <EditText
            android:id="@+id/editPadWidth"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:background="@drawable/edittext_bg"
            android:hint="@string/npcfg_padwidth_hint"
            android:inputType="numberDecimal"
            android:saveEnabled="true"
            android:singleLine="true"
            android:textColor="#ff3f3f3f"
            android:textSize="12sp" />
   </LinearLayout>
    
    <LinearLayout
    android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center" >

        <TextView
            style="@style/pref_conf"
			android:gravity="end"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/npcfg_radius" />

        <EditText
            android:id="@+id/editNdleRadius"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:background="@drawable/edittext_bg"
            android:hint="@string/npcfg_radius_hint"
            android:inputType="numberDecimal"
            android:saveEnabled="true"
            android:singleLine="true"
            android:textColor="#ff3f3f3f"
            android:textSize="12sp" />
   </LinearLayout>
    
    <LinearLayout
    android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center" 
        >

        <TextView
            style="@style/pref_conf"
			android:gravity="end"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/npcfg_steplen" />

        <EditText
            android:id="@+id/editStepLen"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:background="@drawable/edittext_bg"
            android:hint="@string/npcfg_steplen_hint"
            android:inputType="numberDecimal"
            android:saveEnabled="true"
            android:singleLine="true"
            android:textColor="#ff3f3f3f"
            android:textSize="12sp" >
                    <requestFocus />            
            </EditText>
   </LinearLayout>
    <LinearLayout
    android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center" 
        >
    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="56dp"
        android:layout_height="32dp"
        android:background="@drawable/btn_1"
        android:text="@string/confirm" 
        android:layout_marginRight="16dp"
        />
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="56dp"
        android:layout_height="32dp"
        android:background="@drawable/btn_1"
        android:layout_marginLeft="16dp"
        android:text="@string/cancel" />
       </LinearLayout>
</LinearLayout>
